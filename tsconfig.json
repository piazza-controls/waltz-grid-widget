{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "lib": ["ES2015", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true,
    "outDir": "./dist",
    "declaration": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "*vendor*", "scripts"
  ]
}